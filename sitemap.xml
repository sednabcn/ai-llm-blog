---
layout: none
permalink: /sitemap.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% assign all_pages = site.pages | concat: site.posts | concat: site.tutorials %}

  {% for page in all_pages %}
    {% if page.sitemap != false and page.url %}
    <url>
      <loc>{{ site.url }}{{ page.url | replace:'index.html','' }}</loc>
      <lastmod>
        {% if page.last_modified_at %}
          {{ page.last_modified_at | date_to_xmlschema }}
        {% elsif page.date %}
          {{ page.date | date_to_xmlschema }}
        {% endif %}
      </lastmod>
      <changefreq>
        {% if page.url == "/" %}
          daily
        {% elsif page.url contains "/posts/" %}
          weekly
        {% elsif page.url contains "/tutorials/" %}
          monthly
        {% else %}
          yearly
        {% endif %}
      </changefreq>
      <priority>
        {% if page.url == "/" %}
          1.00
        {% elsif page.url == "/posts/" or page.url == "/tutorials/" or page.url == "/help/" %}
          0.80
        {% elsif page.url contains "/posts/" %}
          0.80
        {% elsif page.url contains "/tutorials/" %}
          0.64
        {% elsif page.url contains "/categories/" or page.url contains "/tags/" %}
          0.64
        {% else %}
          0.51
        {% endif %}
      </priority>
    </url>
    {% endif %}
  {% endfor %}
</urlset>


