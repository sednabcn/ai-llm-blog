source 'https://rubygems.org'

# Core Jekyll Gem
gem 'jekyll', '~> 4.3.2'

# Theme
gem 'minimal-mistakes-jekyll'

# Core Plugins
group :jekyll_plugins do
  gem 'jekyll-paginate', '~> 1.1.0'
  gem 'jekyll-sitemap', '~> 1.4.0'
  gem 'jekyll-gist', '~> 1.5.0'
  gem 'jekyll-feed', '~> 0.17.0'
  gem 'jekyll-include-cache', '~> 0.2.1'
  gem 'jekyll-seo-tag', '~> 2.8.0'
end

# Development-specific gems
group :development do
  gem 'jekyll-browsersync'
  gem 'jekyll-compose'  # Provides draft management commands
  gem 'jekyll-admin'    # Provides an admin interface for managing posts
  gem 'ruby-debug-ide', '~> 0.7.3'
  gem 'debase', '~> 0.2.9'
  gem 'webrick', '~> 1.8.1'
end

# Optional performance and optimization gems
group :development_optional do
  gem 'therubyracer'
  gem 'uglifier', '~> 4.2.0'
end

# Platforms
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem 'tzinfo', '~> 1.2.10'
  gem 'tzinfo-data'
end

# Performance monitoring
gem 'fast-stemmer', '~> 1.0.2'

# Markdown and syntax highlighting
gem 'kramdown', '~> 2.4.0'
gem 'rouge', '~> 4.1.2'

gem 'webrick'

